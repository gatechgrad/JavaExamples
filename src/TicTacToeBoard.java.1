import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

class TicTacToeBoard extends JComponent {
	
	final int CELL_SIZE = 128;
	int[][] iBoard;
	
	public TicTacToeBoard() {
		setPreferredSize(new Dimension(3 * CELL_SIZE, 3 * CELL_SIZE));
		
		iBoard = new int[3][3];
		iBoard[0][0] = 1;
		iBoard[1][1] = 2;
	}
	
	

	public void paintComponent(Graphics g) {
		int i, j;
		
		g.setColor(Color.white);
		g.fillRect(0, 0, 3 * CELL_SIZE, 3 * CELL_SIZE);
		
		g.setColor(Color.black);
		for (i = 0; i < 3; i++) {
			g.drawLine(i * CELL_SIZE, 0, i * CELL_SIZE, 3 * CELL_SIZE);
			
		}

		for (i = 0; i < 3; i++) {
			g.drawLine(0, i * CELL_SIZE, 3 * CELL_SIZE, i * CELL_SIZE);
			
		}
		
		for (i = 0; i < 3; i++) {
			for (j = 0; j < 3; j++) {
				if (iBoard[i][j] == 1) {
					g.setColor(Color.red);
					g.drawString("X", j * CELL_SIZE + 32, i * CELL_SIZE + 32);
				} else if (iBoard[i][j] == 2) {
					g.setColor(Color.blue);
					g.drawString("O", j * CELL_SIZE + 32, i * CELL_SIZE + 32);
					
				}
				
			}
		}

		
	}


}